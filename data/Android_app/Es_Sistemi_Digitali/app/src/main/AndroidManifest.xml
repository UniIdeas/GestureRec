<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androidx.car.app.samples.es_sistemi_digitali">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MICROPHONE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Es_Sistemi_Digitali">

        <activity
            android:name=".VoiceActivity"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar" />
        <activity
            android:name=".PlayVideoActivity"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar" />
        <activity
            android:name=".PhotoAnalysisActivity"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar" />

        <activity
            android:name=".AnalysisActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar" />
        <activity
            android:name=".VideoActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar" />
        <activity
            android:name=".PhotoActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Es_Sistemi_Digitali.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>